generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int    @id @default(autoincrement())
  cognitoId String @unique
  username  String @unique

  owner Business[]
}

model Business {
  id         Int    @id @default(autoincrement())
  ownerId    Int?
  name       String
  street     String
  postcode   Int
  city       String
  coordinate String
  User       User?  @relation(fields: [ownerId], references: [userId])

  data    RankData[]
  reviews Reviews[]
}

model RankData {
  rank                    Int
  totalReviews            Int
  mostMentionedCompliment String
  mostMentionedComplaint  String
  mostMentionedStaff      String
  reviewScore             Decimal
  mostReviewedByGender    String
  socialEngagement        Int
  topSocialTool           String
  bottomSocialTool        String
  topReviewTool           String
  bottomReviewTool        String
  lastReview              DateTime?
  lastMention             DateTime?
  Business                Business? @relation(fields: [businessId], references: [id])
  businessId              Int       @unique
}

model Reviews {
  id         Int       @id @default(autoincrement())
  businessId Int
  name       String
  review     String
  score      Int
  gender     String
  date       DateTime
  Business   Business? @relation(fields: [businessId], references: [id])
}
